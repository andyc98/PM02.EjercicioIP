<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM02.EjercicioIP.PageDatos">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Datos personales"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Placeholder="Ingrese sus nombres" x:Name="nombres" Keyboard="Text"/>
            <Entry Placeholder="Ingrese sus apellidos" x:Name="apellidos" Keyboard="Text"/>
            <Entry Placeholder="Ingrese su edad" x:Name="edad" Keyboard="Numeric"/>
            <Entry Placeholder="Ingrese su correo electronico" x:Name="email" Keyboard="Email"/>
            <Button Text="Enviar datos" Clicked="Button_Clicked" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>