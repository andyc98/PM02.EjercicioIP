<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM02.EjercicioIP.PageOperaciones">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Operaciones aritmeticas"/>
            <Entry Placeholder="Ingrese el primer numero" x:Name="num1" Keyboard="Numeric"/>
            <Entry Placeholder="Ingrese el segundo numero" x:Name="num2" Keyboard="Numeric"/>
            <Entry Placeholder="Resultado de la operación" x:Name="res"/>
            <Button Text="Sumar" Clicked="Button_suma" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>